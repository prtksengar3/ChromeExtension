{
    "name": "Getting Started Example",
    "version": "1.0",
    "browser_action": {
        "default_popup": "hello.html"
      },
    "description": "Build an Extension!",
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "css": ["myStyles.css"],
          "js": ["contentScript.js"]
        }
      ],
      "background": {
        "scripts": ["background.js"],
        "persistent": false
      }
  }